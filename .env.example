# ========== SECURITY ==========
# IMPORTANT: Change this to a random 32+ character string in production!
JWT_SECRET_KEY=your-super-secret-key-min-32-chars-long-CHANGE-THIS-IN-PRODUCTION

# ========== EFRIS CONFIG ==========
EFRIS_CLIENT_ID=
EFRIS_CLIENT_SECRET=
EFRIS_CERT_PATH=keys/wandera.pfx

# ========== DATABASE ==========
# SQLite (Development)
DATABASE_URL=sqlite:///efris.db

# PostgreSQL (Production - Recommended)
# POSTGRES_URL=postgresql://username:password@localhost:5432/efris_db
# Once migrated, set: DATABASE_URL=postgresql://username:password@localhost:5432/efris_db

# ========== QUICKBOOKS (if using) ==========
QB_CLIENT_ID=your_quickbooks_client_id
QB_CLIENT_SECRET=your_quickbooks_client_secret
QB_REDIRECT_URI=http://localhost:8001/api/quickbooks/callback
QB_ENVIRONMENT=sandbox

# ========== PAYMENT GATEWAY ==========
# Flutterwave (Recommended for Uganda - supports UGX and mobile money)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxxxxxxxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxxxxxxxxxx
FLUTTERWAVE_WEBHOOK_SECRET=your_webhook_secret
PAYMENT_REDIRECT_URL=http://localhost:8001/payment/callback

# Paystack (Alternative)
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# ========== EMAIL NOTIFICATIONS ==========
# Gmail SMTP (easiest for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=EFRIS Platform

# SendGrid (Production recommended)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key

# Owner notifications
OWNER_EMAIL=owner@efrisplatform.com

# ========== ERROR MONITORING ==========
# Sentry (Optional - get free account at sentry.io)
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=efris_api.log
SLOW_QUERY_THRESHOLD=2.0

# ========== APPLICATION ==========
APP_ENV=development
DEBUG=true
PORT=8001
COMPANY_LOGO_URL=https://yourdomain.com/logo.png